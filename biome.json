{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".git/**",
			"**/*.min.js",
			".next/**",
			"node_modules/**",
			"*.config.*",
			"*.d.*",
			"*.css",
			"src/db/generated/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": ["src/shadcn/ui", "src/db/generated/**"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useExplicitType": "warn"
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "warn",
					"fix": "safe"
				},
				"noUnusedImports": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"suspicious": {
				"noConsole": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
